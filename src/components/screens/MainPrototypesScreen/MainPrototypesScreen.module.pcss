.container {
  padding: 0 var(--sp-xl);
  gap: var(--sp-lg);
  height: calc(100vh - 86px);
  flex-flow: row wrap;
  justify-content: space-evenly;
  align-items: center;
}

.titleContainer {
  gap: var(--sp-lg);
  max-width: 500px;
  min-width: 400px;
}

.header {
  max-width: 580px;
  font-size: 87px;
  font-weight: 400;
  line-height: 100%;
}

.figureContainer {
  height: 70%;

  img {
    height: 100%;
  }

  @media (width <= 768px) {
    height: unset;
    width: 100%;
  }
}
