.container {
  min-width: 280px;
  flex: 1;
}

.imgContainer {
  width: 50px;
  height: 50px;
  margin-bottom: var(--sp-md);
  padding: var(--sp-md);
  align-items: center;
  justify-content: center;
  border-radius: 50%;

  img {
    width: 100%;
    height: 100%;
  }
}

.iconContainer {
  background-color: var(--color-base-white);
  box-shadow: inset 0 1px 3px 0 rgb(0 0 0 / 8%);
}
