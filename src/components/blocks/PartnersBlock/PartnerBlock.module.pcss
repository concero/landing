.wrapper {
  flex-direction: row;
  gap: var(--sp-lg);
}

.partnerCardContainer {
  flex-direction: row;
  align-items: center;
  background-color: transparent;
  border-radius: var(--st-br-card-sm);
  padding: var(--sp-sm);
  gap: var(--sp-md);

  .imageContainer {
    width: 64px;
    height: 64px;
    border-radius: var(--st-br-card-sm);
  }

  .disabled {
    color: var(--color-text-secondary);
  }
}

.whiteText {
  color: var(--color-base-white);
}

.cardsContainer {
  flex: 1;
  gap: var(--sp-lg);
  padding-top: var(--sp-xxl);
  flex-direction: row;

  .column {
    flex: 1;
    gap: var(--sp-lg);
  }
}

.contactCard {
  flex: 1;
  align-items: flex-start;
  justify-content: space-between;
  background: linear-gradient(206deg, #2e3440 0%, #191b20 100%);
  border-radius: var(--st-br-card-sm);
  padding: var(--sp-xxl);
  gap: var(--sp-lg);

  .contactHeader {
    max-width: 316px;
    gap: var(--sp-sm);

    h2 {
      color: var(--color-base-white);
    }
  }
}

.button {
  border-radius: var(--st-br-xl);
}

.buttonTitle {
  color: var(--color-base-white);
  font-weight: 400;
}

@media (width <= 768px) {
  .wrapper {
    flex-direction: column;
  }
}
