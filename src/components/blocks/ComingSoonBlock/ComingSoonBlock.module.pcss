.cardContainer {
    overflow: hidden;
    padding: var(--sp-xxl);
}

.imagesContainer {
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    gap: var(--sp-md);
    flex: 1;
    padding-top: var(--sp-xl);
    margin-right: calc(var(--sp-xxl) * -1);
    margin-left: calc(var(--sp-xxl) * -1);
    margin-bottom: calc((var(--sp-xxl) + var(--sp-md)) * -1);
}
