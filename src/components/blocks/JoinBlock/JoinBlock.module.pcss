.wrapper {
  margin-bottom: 300px;
  border-bottom-left-radius: var(--st-br-card);
  border-bottom-right-radius: var(--st-br-card);
}

.cardContainer {
  max-height: 400px;
  padding: var(--sp-xxl);
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;

  @media (width <= 1270px) {
    max-height: unset;
  }

  @media (width <= 768px) {
    max-height: 400px;
  }
}

.titleContainer {
  flex: 1;
  height: 100%;
  max-width: 50%;
  justify-content: space-evenly;
  gap: var(--sp-md);
  align-items: flex-start;
  z-index: 1;

  div {
    max-width: 600px;
  }

  h2 {
    font-size: 80px;
    line-height: 100%;
    padding-bottom: var(--sp-md);
  }
}

.imgContainer {
  width: 600px;
  transform: translateX(100px) translateY(100px);

  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
}

.inputContainer {
  width: 100%;
  flex-direction: row;
  align-items: center;
  gap: var(--sp-xl);
}

.input {
  padding-top: 14px;
}

.launchAppButton {
  padding: var(--sp-md) var(--sp-lg) !important;
  border-radius: var(--st-br-lg) !important;
}

.buttonTitle {
  color: var(--color-base-white);
  font-weight: 400;
}

@media (width <= 768px) {
  .wrapper {
    margin-bottom: 500px;
  }

  .cardContainer {
    padding: var(--sp-lg);
    flex-direction: column;
  }

  .titleContainer {
    width: 100%;
    max-width: unset;

    h2 {
      font-size: 48px;
    }
  }

  .imgContainer {
    width: 500px;
    transform: unset;
  }

  .mainButton {
    width: 100%;
  }

  .inputContainer {
    gap: var(--sp-md);
  }

  .buttonTitleSize {
    font-size: 16px;
  }
}
